{
    "manifest_version": 2,
    "name": "ChatGPT Browser Extension",
    "version": "1.0",
    "description": "A simple extension to access ChatGPT.",
    "icons": {
        "48": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Open ChatGPT"
    },
    "permissions": [
        "activeTab"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

